pipeline {
    agent {
        docker {
            image 'python:2.7.14-slim-jessie'
            args '-e SPARK_HOME=/usr/local/lib/python2.7/site-packages/pyspark/'
        }
    }
    stages {
        stage('Initialise') {
            steps{
                sh 'pip install -r python/requirements.txt'
            }
        }

        stage('Test') {
            steps {
                sh 'pytest python/sparkts/test'
            }
        }
        stage('Deliver') {
            steps {
                sh 'echo Delivery!!'
            }
        }
    }
}