pipeline {
    agent {
        docker {
            image 'python:2.7.14-slim-stretch'
            sh 'pip install ./python/requirements.txt'
        }
    }
    stages {
        stage('Test') {
            steps {
                sh 'pytest ./python/sparkts/test'
            }
        }
        stage('Deliver') {
            steps {
                sh 'echo Delivery!!'
            }
        }
    }
}