pipeline {
    agent {
        docker {
            image 'python:2.7.14-slim-jessie'
        }
    }
    stages {
        stage('Test') {
            steps {
                sh 'pip install -r python/requirements.txt'
                sh 'export SPARK_HOME=/usr/local/lib/python2.7/site-packages/pyspark'
                sh 'pytest python/sparkts/test'
            }
        }
        stage('Deliver') {
            steps {
                sh 'echo Delivery!!'
            }
        }
    }
}